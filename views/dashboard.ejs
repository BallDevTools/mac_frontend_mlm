<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wallet Connect and Logout</title>
    <script src="https://cdn.jsdelivr.net/npm/web3@1.5.2/dist/web3.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Navbar</a>
         <div class="ml-auto">
            <button class="btn btn-success" id="connectButton">Connect Wallet</button>
            <button class="d-none btn btn-danger" id="logoutButton">Logout</button>
         </div>
        </div>
        
      </nav>
    <div class="container-fluid">
        <h5 id="status"></h5>
        <!-- <h1>Wallet Connection</h1>
        <button id="connectButton">Connect Wallet</button>
        <button id="logoutButton">Logout</button>
        <div id="status"></div> -->
        
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function(){
        let web3;
        let currentAccount = null;
        const connectButton = document.getElementById('connectButton');
        const logoutButton = document.getElementById('logoutButton');
        const statusDiv = document.getElementById('status');

        async function connectWallet() {
            if (typeof window.ethereum !== 'undefined') {
                try {
                    // Request account access
                    await window.ethereum.request({ method: 'eth_requestAccounts' });
                    web3 = new Web3(window.ethereum);
                    
                    const accounts = await web3.eth.getAccounts();
                    currentAccount = accounts[0];
                    updateUI();
                    
                    // Listen for account changes
                    window.ethereum.on('accountsChanged', handleAccountsChanged);
                } catch (error) {
                    console.error(error);
                    statusDiv.innerHTML = 'Failed to connect wallet';
                }
            } else {
                statusDiv.innerHTML = 'Please install MetaMask!';
            }
        }

        function handleAccountsChanged(accounts) {
            if (accounts.length === 0) {
                // MetaMask is locked or the user has not connected any accounts
                logout();
            } else if (accounts[0] !== currentAccount) {
                currentAccount = accounts[0];
                updateUI();
            }
        }

        function updateUI() {
            if (currentAccount) {
                statusDiv.innerHTML = `Connected: ${currentAccount}`;

                $("#connectButton").removeClass('d-none')
                $("#logoutButton").addClass('d-none')
                // Get and display balance
                web3.eth.getBalance(currentAccount).then(balance => {
                    const ethBalance = web3.utils.fromWei(balance, 'ether');
                    statusDiv.innerHTML += `<br>Balance: ${parseFloat(ethBalance).toFixed(4)} MATIC`;
                });
            } else {
                statusDiv.innerHTML = 'Not connected';

                $("#connectButton").addClass('d-none')
                $("#logoutButton").removeAttr('d-none')
            }
        }

        function logout() {
            currentAccount = null;
            web3 = null;
            updateUI();
        }

        connectButton.onclick = connectWallet;
        logoutButton.onclick = logout;

        // Check if already connected
        // if (typeof window.ethereum !== 'undefined') {
        //     window.ethereum.request({ method: 'eth_accounts' })
        //         .then(handleAccountsChanged)
        //         .catch(console.error);
        // }
    });
    </script>
</body>
</html>